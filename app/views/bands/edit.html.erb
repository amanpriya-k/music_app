<h1>Edit information about <%= @band.name %></h1>

<form action="<%= band_url %>" method="post">
  <%= auth_helper %>
  <input type="hidden" name="_method" value="patch">

  <label for="name">Name:</label>
  <input type="text" name="band[name]" />

  <input type="submit" value="Submit new information">
</form>
