<h1> <%= @band.name %> </h1>

  <% @band.albums.each do |album| %>
    <ul>
      <li>
        <a href=" <%= album_url(album) %> "><h2><%= album.title %> (<%= album.year %>)</h2></a>
      </li>
    </ul>
  <% end %>

<br>
<br>
<br>

<form action=" <%= edit_band_url(@band) %>" method="post">
  <%= auth_helper %>
  <input type="hidden" name="_method" value="get">
  <input type="submit" value="edit band">
</form>

<br>
<form action=" <%= band_url %> " method="post">
  <%= auth_helper %>
  <input type="hidden" name="_method" value="delete">
  <input type="submit" value="remove band">
</form>

<br>
<form action=" <%= bands_url %> " method="post">
  <input type="hidden" name="_method" value="get">
  <%= auth_helper %>
  <input type="submit" value="all bands">
</form>

<br>
<form action=" <%= new_band_album_url(@band) %> " method="post">
  <input type="hidden" name="_method" value="get">
  <%= auth_helper %>
  <input type="submit" value="add album">
</form>
